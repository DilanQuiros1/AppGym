<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:animateLayoutChanges="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/card_mem"
            android:padding="7dp">



            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"

                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/Nombre_producto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/tipoMembresiaCompra"
                    android:textColor="@color/teal_700"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/cuadro_img"
                    >

                    <ImageView
                        android:id="@+id/ImagenEntrenador"
                        android:layout_width="87dp"
                        android:layout_height="77dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/gym" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/Precio_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:text="$100"/>


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Qr_pruducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="45dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/white"
                    android:text="100121232112112"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Hora_InicioEntrenador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingTop="10dp"
                    android:layout_below="@+id/Qr_pruducto"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/comprar_producto" />




            </RelativeLayout>





        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="3dp" />

    </LinearLayout>

</LinearLayout>