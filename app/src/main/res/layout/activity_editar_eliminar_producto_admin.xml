<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEliminar_producto_admin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/color_bar"/>

    <Button
        android:id="@+id/escanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/escanear"
        android:textColor="@color/teal_700"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qrcode"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_below="@+id/escanear"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="25dp"
        android:text="@string/qrcode"
        android:textColor="#0B0B0B"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_producto"
        android:layout_width="107dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="54dp"
        android:clickable="true"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/escanear"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/add_producto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:text="@string/textView3"
        android:textColor="#F44336"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/nombre_producto"
        android:layout_width="184dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cuadro_img"
        android:padding="5dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/textView3"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint=""
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="124dp"
        android:text="@string/textView4"
        android:textColor="#F44336"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_producto"
        android:layout_marginLeft="50dp"
        android:text="@string/textView5"
        android:textColor="#F44336"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="305dp" />

    <EditText
        android:id="@+id/precio_producto"
        android:layout_width="149dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint=""
        android:layout_below="@+id/textView5"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/cuadro_img"
        android:padding="5dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_producto"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"
        android:text="@string/textView_cantidad"
        android:textColor="#F44336"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/textViewnueva_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preciona Editar para agregar 10 productos"
        android:layout_marginLeft="210dp"
        android:layout_below="@+id/nombre_producto"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_marginTop="180dp"
        android:textColor="@color/teal_700"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="305dp" />

    <EditText
        android:id="@+id/cantidad_producto"
        android:layout_width="149dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint=""
        android:layout_marginLeft="230dp"
        android:layout_below="@+id/textView5"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/cuadro_img"
        android:padding="5dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/descripcion_producto"
        android:layout_width="349dp"
        android:layout_height="57dp"
        android:layout_below="@+id/descripcion"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/cuadro_img"
        android:ems="10"
        android:gravity="start|top"
        android:hint=""
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />


    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/precio_producto"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:text="@string/descripcion"
        android:textColor="#F44336"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precio_producto" />

    <Button
        android:id="@+id/editar_producto"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_below="@+id/descripcion_producto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_editar"
        android:text="@string/editar_producto" />

    <Button
        android:id="@+id/eliminar_producto"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_below="@+id/editar_producto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_eliminar"
        android:text="@string/eliminar_producto" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/color_menu"
        app:itemIconTint="@drawable/style_menu"
        app:itemTextColor="@drawable/style_menu"
        app:menu="@menu/menu_producto" />

</RelativeLayout>