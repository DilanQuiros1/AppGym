<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context=".Eliminar_Editar_entrenador_admin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/color_bar"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:alpha="0.7"
       android:background="@drawable/coach1">

       <TextView
           android:id="@+id/textElegirId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:text="@string/textElegirId"
           android:textColor="#000000"
           android:textSize="23dp"
           android:textStyle="italic" />

       <TextView
           android:id="@+id/imgactt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
           android:layout_marginTop="50dp"
           android:text="@string/imgactt"
           android:textColor="#FF5722"
           android:textSize="15dp"
           android:textStyle="bold" />


       <RelativeLayout
           android:layout_width="140dp"
           android:layout_height="110dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="90dp"
           android:background="@drawable/cuadro_img">

           <ImageView
               android:id="@+id/imageEditarEntrenador"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_marginTop="0dp"
               android:clickable="true"
               app:srcCompat="@drawable/imagen" />
       </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="230dp"
                android:textColor="#FF5722"
                android:text="ðŸ†”"
                />

           <EditText
               android:id="@+id/ID_E_Opciones"
               android:inputType="number"
               android:textStyle="bold"
               android:layout_width="150dp"
               android:layout_marginTop="110dp"
               android:layout_marginLeft="230dp"
               android:textColorHint="@color/black"
               android:textColor="#FF5722"
               android:layout_height="wrap_content" />


       <TextView
           android:id="@+id/txtnam"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/ID_E_Opciones"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="50dp"
           android:text="@string/txtnam"
           android:textColor="@color/black"
           android:textStyle="bold" />


           <EditText
               android:id="@+id/NombreE"
               android:textStyle="bold"
               android:layout_width="270dp"
               android:layout_marginTop="70dp"
               android:layout_marginLeft="30dp"
               android:textColorHint="@color/black"
               android:layout_below="@+id/ID_E_Opciones"
               android:textColor="#FF5722"
               android:layout_height="wrap_content" />


       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginTop="47dp"
           android:layout_marginLeft="330dp"
           android:layout_below="@+id/ID_E_Opciones"
           android:background="@drawable/gym"/>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/NombreE"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="30dp"
           android:text="@string/ilegal"
           android:textColor="@color/white"
           android:textStyle="bold" />

           <EditText
               android:id="@+id/EdadE_Opciones"
               android:textStyle="bold"
               android:layout_width="150dp"
               android:layout_marginTop="70dp"
               android:layout_marginLeft="30dp"
               android:textColorHint="@color/black"
               android:layout_below="@+id/NombreE"
               android:textColor="#FF5722"
               android:layout_height="wrap_content" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/EdadE_Opciones"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="10dp"
           android:text="@string/cornofono"
           android:textColor="@color/white"
           android:textStyle="bold" />


           <EditText
               android:id="@+id/TEL_E"
               android:textStyle="bold"
               android:layout_width="150dp"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="30dp"
               android:textColorHint="@color/black"
               android:layout_below="@+id/EdadE_Opciones"
               android:textColor="#FF5722"
               android:layout_height="wrap_content" />


       <TextView
           android:id="@+id/txtInicio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/NombreE"
           android:layout_marginLeft="200dp"
           android:layout_marginTop="50dp"
           android:text="@string/txtInicio"
           android:textColor="@color/white"
           android:textSize="17dp"
           android:textStyle="italic" />

       <TextView
           android:id="@+id/VerHoraEntradaActual"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/teal_700"
           android:layout_marginTop="10dp"
           android:text="1:00 PM"
           android:layout_marginLeft="200dp"
           android:layout_below="@+id/txtInicio"/>

       <TextView
           android:id="@+id/txtSalida"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/VerHoraEntradaActual"
           android:layout_marginLeft="200dp"
           android:layout_marginTop="10dp"
           android:text="@string/txtSalida"
           android:textColor="@color/white"
           android:textSize="17dp"
           android:textStyle="italic" />

       <TextView
           android:id="@+id/VerHoraSalidaActual"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10:00 PM"
           android:textColor="@color/teal_700"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="200dp"
           android:layout_below="@+id/txtSalida"/>

       <Button
           android:id="@+id/btnHoraInicioEditar"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/TEL_E"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="30dp"
           android:background="@drawable/btn_hora_inicio"
           android:text="@string/btnHoraInicioEditar" />


       <Button
           android:id="@+id/btnHoraSalidaEditada"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/TEL_E"
           android:layout_marginLeft="210dp"
           android:layout_marginTop="30dp"
           android:background="@drawable/btn_hora_inicio"
           android:text="@string/btnHoraSalidaEditada" />


       <Button
           android:id="@+id/btneliminarE"
           android:layout_width="270dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/btnHoraSalidaEditada"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape_text_comprar"
           android:text="@string/eliminar_producto"
           android:textColor="@color/white"
           android:textSize="17dp"
           android:textStyle="bold" />

       <Button
           android:id="@+id/btneditarE"
           android:layout_width="270dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/btneliminarE"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape_text_comprar"
           android:text="@string/editar_producto"
           android:textColor="@color/white"
           android:textSize="17dp"
           android:textStyle="bold" />

   </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/color_menu"
        app:itemIconTint="@drawable/style_menu"
        app:itemTextColor="@drawable/style_menu"
        app:menu="@menu/menu_admin"/>

</RelativeLayout>