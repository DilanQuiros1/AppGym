<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_verEntrenadores">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:animateLayoutChanges="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/card_entrenadores"
            android:padding="7dp">



            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"

                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/NombreEntrenador"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/tipoMembresiaCompra"
                    android:textColor="#FF5722"
                    android:textSize="20sp"
                    android:textStyle="italic" />

              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:background="@drawable/cuadro_img">

                  <ImageView
                      android:id="@+id/ImagenEntrenador"
                      android:layout_width="87dp"
                      android:layout_height="77dp"
                      android:padding="10dp"
                      android:layout_marginTop="0dp"
                      android:clickable="true"
                      app:srcCompat="@drawable/imagen" />


              </RelativeLayout>

                <TextView
                    android:id="@+id/Tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/cornofono"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TelEntrenador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="1010 1010"/>


            </LinearLayout>



           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/Hora_Inicio"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="27dp"
                   android:paddingTop="40dp"
                   android:text="@string/Hora_Inicio"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/Hora_InicioEntrenador"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:paddingTop="10dp"
                   android:textColor="@color/black"
                   android:text="1:00 PM"
                   android:layout_below="@+id/Hora_Inicio"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="27dp"
                   android:textSize="14sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/Hora_Salida"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/Hora_InicioEntrenador"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="27dp"
                   android:paddingTop="10dp"
                   android:text="@string/Hora_Salida"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/Hora_SalidaEntrenador"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:paddingTop="10dp"
                   android:text="10:00PM"
                   android:textColor="@color/black"
                   android:layout_below="@+id/Hora_Salida"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="27dp"
                   android:textSize="14sp"
                   android:textStyle="bold" />

           </RelativeLayout>





        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>