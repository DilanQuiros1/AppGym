<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_membresias_compradas_usuario">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:animateLayoutChanges="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/card_compradas"
            android:padding="7dp">



            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                >

                <TextView
                    android:id="@+id/tipoMembresiaCompra"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/tipoMembresiaCompra"
                    android:textColor="#03C1C0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mes"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AreasDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/AreasDisponibles"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/LBInicioMembresia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="@string/LBInicioMembresia"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="10 10 10"
                    android:textStyle="italic"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/LBvencimientoMembresia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="27dp"
                    android:paddingTop="10sp"
                    android:text="@string/LBvencimientoMembresia"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FechaVencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10sp"
                    android:text="10 / 10 / 10"
                    android:textStyle="italic"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="27dp"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/ID_usuarioCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10sp"
                    android:text=""
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="27dp"
                    android:textSize="13sp"
                    />




            </LinearLayout>


            <TextView
                android:id="@+id/LBestadoMembresia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="27dp"
                android:text="@string/LBestadoMembresia"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EstadoMembresia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LBestadoMembresia"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="27dp"
                android:paddingTop="10sp"
                android:text="@string/EstadoMembresia"
                android:textColor="#FF5722"
                android:textSize="13sp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/VerMembresiaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/EstadoMembresia"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="27dp"
                android:paddingTop="10dp"
                android:text="Gym App"
                android:textColor="#A61D1D"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>